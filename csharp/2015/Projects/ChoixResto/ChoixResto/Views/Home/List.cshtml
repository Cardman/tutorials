@model ChoixResto.ViewModels.AccueilViewModel

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<style type="text/css">
    table {
        border-collapse: collapse;
    }

    td, th {
        border: 1px solid black;
    }
</style>
<table>
    <tr>
        <th>Nom</th>
        <th>Téléphone</th>
    </tr>
    @{
        foreach (var resto in Model.ListeDesRestos)
        {
            <tr>
                <td>@resto.Nom</td>
                <td>@resto.Telephone</td>
            </tr>
        }
    }
</table>